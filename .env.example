# SimplyInspect Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=simplyinspect
DB_USER=postgres
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# SMTP Email Configuration
# For Office 365/Outlook
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=notifications@yourdomain.com
SMTP_USE_TLS=true

# For Gmail (requires app-specific password)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_FROM=your-email@gmail.com
# SMTP_USE_TLS=true

# Change Detection Configuration
CHANGE_DETECTION_ENABLED=true
# Interval in seconds (3600 = 1 hour, 86400 = 24 hours)
CHANGE_DETECTION_INTERVAL=3600

# Alternative: Use cron expression for more control
# CHANGE_DETECTION_CRON=0 */6 * * *  # Every 6 hours
# CHANGE_DETECTION_CRON=0 8 * * *    # Daily at 8 AM
# CHANGE_DETECTION_CRON=0 8 * * 1    # Weekly on Monday at 8 AM

# Notification Processing
NOTIFICATION_CHECK_INTERVAL=300  # Check every 5 minutes (in seconds)

# Default notification recipients (comma-separated)
# These will be added to the database on first run
DEFAULT_NOTIFICATION_RECIPIENTS=admin@yourdomain.com,security@yourdomain.com

# Azure AD Configuration (for SharePoint/Graph API access)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
SHAREPOINT_URL=https://your-tenant.sharepoint.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# UI Configuration
UI_PORT=3001

# Logging
LOG_LEVEL=INFO

# Development/Production Mode
ENVIRONMENT=development  # or 'production'